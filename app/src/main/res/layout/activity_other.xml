        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다른 화면으로 들어온 상태입니다"/>
    <Button
        android:id="@+id/returnToMainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이전 화면으로 돌아가기"/>
</LinearLayout>